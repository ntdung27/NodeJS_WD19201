<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Đây là trang LIST</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Image</th>
                <th>Pice</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% products.map((p) => { %>
                <tr>
                    <td><%= p.id %></td>
                    <td><%= p.name %></td>
                    <td><img src="<%= p.image %>" alt=""></td>
                    <td><%= p.price %></td>
                    <td><%= p.description %></td>
                    <td>
                        <a href="/detail/<%= p.id %>">Detail</a>
                        <a href="">Edit</a>
                        <a 
                            onclick="return confirm('Are you sure?')"
                            href="/delete/<%= p.id %>"
                        >
                            Delete
                        </a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>